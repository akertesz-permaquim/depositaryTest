    private Depositary.Entities.Tables.Regionalizacion.Lenguaje? ObtenerLenguajeDefault()
    {
        Depositary.Entities.Tables.Regionalizacion.Lenguaje? resultado = null;

        Depositary.Business.Tables.Regionalizacion.Lenguaje oLenguaje = new();
        oLenguaje.Where.Add(Depositary.Business.Tables.Regionalizacion.Lenguaje.ColumnEnum.EsDefault, Depositary.sqlEnum.OperandEnum.Equal, true);
        oLenguaje.Where.Add(Depositary.sqlEnum.ConjunctionEnum.AND, Depositary.Business.Tables.Regionalizacion.Lenguaje.ColumnEnum.Habilitado, Depositary.sqlEnum.OperandEnum.Equal, true);
        if (crudMode == CrudMode.Edit)
            oLenguaje.Where.Add(Depositary.sqlEnum.ConjunctionEnum.AND, Depositary.Business.Tables.Regionalizacion.Lenguaje.ColumnEnum.Id, Depositary.sqlEnum.OperandEnum.NotEqual, Lenguaje_entity.Id);

        oLenguaje.Items();

        if (oLenguaje.Result.Count > 0)
            resultado = oLenguaje.Result.FirstOrDefault();

        return resultado;
    }

    private bool InsertarItemsLenguajeDefault()
    {
        Depositary.Business.Tables.Regionalizacion.LenguajeItem oLenguajeItemNuevo = new();
        Depositary.Business.Tables.Regionalizacion.LenguajeItem oLenguajeItemDefault = new();

        oLenguajeItemDefault.Where.Add(Depositary.Business.Tables.Regionalizacion.LenguajeItem.ColumnEnum.LenguajeId, Depositary.sqlEnum.OperandEnum.Equal, lenguajeDefault.Id);

        oLenguajeItemDefault.Items();

        if (oLenguajeItemDefault.Result.Count > 0)
        {
            foreach (var lenguajeItem in oLenguajeItemDefault.Result)
            {
                Depositary.Entities.Tables.Regionalizacion.LenguajeItem eLenguajeItemNuevo = new();

                eLenguajeItemNuevo.Clave = lenguajeItem.Clave;
                eLenguajeItemNuevo.Texto = lenguajeItem.Texto + "**"; //Se le anexan asteriscos para que se sepa que se heredo y no se toco.
                eLenguajeItemNuevo.LenguajeId = Lenguaje_entity.Id;
                eLenguajeItemNuevo.FechaCreacion = DateTime.Now;
                eLenguajeItemNuevo.Habilitado = lenguajeItem.Habilitado;
                eLenguajeItemNuevo.LargoMaximo = lenguajeItem.LargoMaximo;
                eLenguajeItemNuevo.UsuarioCreacion = Lenguaje_entity.UsuarioCreacion;

                try
                {
                    oLenguajeItemNuevo.Add(eLenguajeItemNuevo, (long)SeguridadEntities.Aplicacion.AdministradorWeb);
                }
                catch (Exception ex)
                {
                    return false;
                }
            }

        }

        return true;
    }

