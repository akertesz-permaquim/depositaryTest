        CodigoPostal_entity = item;
        Ciudad_CiudadId_entity = new()
            {
                Id = Ciudad_CiudadId_entities.FirstOrDefault(c => c.Id == CodigoPostal_entity.CiudadId).Id,
                Nombre = Ciudad_CiudadId_entities.FirstOrDefault(c => c.Id == CodigoPostal_entity.CiudadId).Nombre
            };
        Usuario_UsuarioCreacion_entity = new()
            {
                Id = Usuario_UsuarioCreacion_entities.FirstOrDefault(c => c.Id == CodigoPostal_entity.UsuarioCreacion).Id,
                Nombre = Usuario_UsuarioCreacion_entities.FirstOrDefault(c => c.Id == CodigoPostal_entity.UsuarioCreacion).Nombre
            };
        if (Usuario_UsuarioModificacion_entities.Exists(c => c.Id == CodigoPostal_entity.UsuarioModificacion))
        {
            Usuario_UsuarioModificacion_entity = new()
                {
                    Id = Usuario_UsuarioModificacion_entities.FirstOrDefault(c => c.Id == CodigoPostal_entity.UsuarioModificacion).Id,
                    Nombre = Usuario_UsuarioModificacion_entities.FirstOrDefault(c => c.Id == CodigoPostal_entity.UsuarioModificacion).Nombre
                };
        }
        if (delete)
            crudMode = CrudMode.Delete;
        else
            crudMode = CrudMode.Edit;
