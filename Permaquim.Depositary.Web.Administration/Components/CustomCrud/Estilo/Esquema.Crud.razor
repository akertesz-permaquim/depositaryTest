@code {
    /// <summary>
    /// Crud Mode Enum
    /// </summary>
    private enum CrudMode
    {
        List,
        Add,
        Edit,
        Delete
    }

    /// <summary>
    /// Variables to handle column filter for field Banco.Habilitado
    private bool? Habilitado_filter;

        /// <summary>
    /// Variables to handle column filter for field Banco.Habilitado
    private bool? EsDefault_filter;

    /// <summary>
    /// Variables to handle main entity
    /// </summary>
    private Depositary.Entities.Tables.Estilo.Esquema Esquema_entity = new();
    private List<Depositary.Entities.Tables.Estilo.Esquema> Esquema_entities = null;

    private List<Depositary.Entities.Tables.Estilo.Esquema> rowsEsquemasExpandidos = new();

    /// <summary>
    /// Variables to multilanguaje
    /// </summary>
    private List<Entities.TextoLenguaje> dataLenguaje;

    private Depositary.Entities.Tables.Estilo.Esquema? esquemaDefault = null;

    /// <summary>
    /// Variables to store permissions
    /// </summary>
    private List<SeguridadEntities.FuncionRol> dataFunciones;

    /// <summary>
    ///  Page crud mode {List,Add,Edit,Delete}
    /// </summary>
    private CrudMode crudMode = CrudMode.List;

    /// <summary>
    ///  Variable to store the user id
    /// </summary>
    private Depositary.Entities.Tables.Seguridad.Usuario? dataUsuario = null;

    /// <summary>
    /// Variables to handle Relation between Cuenta.UsuarioCreacion and Usuario.Id
    /// </summary>
    private Depositary.Entities.Tables.Seguridad.Usuario Usuario_UsuarioCreacion_entity = new();
    private List<Depositary.Entities.Tables.Seguridad.Usuario>? Usuario_UsuarioCreacion_entities;
    private List<Depositary.Entities.Tables.Seguridad.Usuario> Usuario_UsuarioCreacion_filter;
    private IEnumerable<Int64> selectedFilter_UsuarioCreacion;

    /// <summary>
    /// Variables to handle Relation between Cuenta.UsuarioModificacion and Usuario.Id
    /// </summary>
    private Depositary.Entities.Tables.Seguridad.Usuario Usuario_UsuarioModificacion_entity = new();
    private List<Depositary.Entities.Tables.Seguridad.Usuario>? Usuario_UsuarioModificacion_entities;
    private List<Depositary.Entities.Tables.Seguridad.Usuario> Usuario_UsuarioModificacion_filter;
    private IEnumerable<Int64> selectedFilter_UsuarioModificacion;

    protected override async Task OnInitializedAsync()
    {
        dataLenguaje = await sessionStorage.GetItemAsync<List<Entities.TextoLenguaje>>("DataLenguaje");
        dataFunciones = await sessionStorage.GetItemAsync<List<SeguridadEntities.FuncionRol>>("DataFunciones");
        await Task.Run(LoadMainEntityData);
        await Task.Run(LoadTypesData);
        dataUsuario = await sessionStorage.GetItemAsync<Depositary.Entities.Tables.Seguridad.Usuario?>("DataUsuario");
        if (dataUsuario == null)
            NavManager.NavigateTo("login", true);
    }
    #region Loading entities data
    /// <summary>
    /// Loads main entity data
    /// </summary>
    private void LoadMainEntityData()
    {
        Depositary.Business.Tables.Estilo.Esquema entity = new();
        Esquema_entities = entity.Items();
    }
    /// <summary>
    /// Loads Type Tables data
    /// </summary>
    private void LoadTypesData()
    {
        Depositary.Business.Tables.Seguridad.Usuario Usuario_UsuarioCreacion_local = new();
        Usuario_UsuarioCreacion_entities = Usuario_UsuarioCreacion_local.Items();
        Usuario_UsuarioCreacion_filter = Usuario_UsuarioCreacion_entities.Where(x => Esquema_entities.Select(x => x.UsuarioCreacion).Distinct().Contains(x.Id)).ToList();

        Depositary.Business.Tables.Seguridad.Usuario Usuario_UsuarioModificacion_local = new();
        Usuario_UsuarioModificacion_entities = Usuario_UsuarioModificacion_local.Items();
        Usuario_UsuarioModificacion_filter = Usuario_UsuarioModificacion_entities.Where(x => Esquema_entities.Select(x => x.UsuarioModificacion).Distinct().Contains(x.Id)).ToList();
    }

    #endregion

    #region Validaciones

    private Depositary.Entities.Tables.Estilo.Esquema? ObtenerEsquemaDefault()
    {
        Depositary.Entities.Tables.Estilo.Esquema? resultado = null;

        Depositary.Business.Tables.Estilo.Esquema oEsquema = new();
        oEsquema.Where.Add(Depositary.Business.Tables.Estilo.Esquema.ColumnEnum.EsDefault, Depositary.sqlEnum.OperandEnum.Equal, true);
        oEsquema.Where.Add(Depositary.sqlEnum.ConjunctionEnum.AND, Depositary.Business.Tables.Estilo.Esquema.ColumnEnum.Habilitado, Depositary.sqlEnum.OperandEnum.Equal, true);
        if (crudMode == CrudMode.Edit)
            oEsquema.Where.Add(Depositary.sqlEnum.ConjunctionEnum.AND, Depositary.Business.Tables.Estilo.Esquema.ColumnEnum.Id, Depositary.sqlEnum.OperandEnum.NotEqual, Esquema_entity.Id);

        oEsquema.Items();

        if (oEsquema.Result.Count > 0)
            resultado = oEsquema.Result.FirstOrDefault();

        return resultado;
    }

    private bool InsertarDetallesEsquemaDefault()
    {
        Depositary.Business.Tables.Estilo.EsquemaDetalle oEsquemaDetalleNuevo = new();
        Depositary.Business.Tables.Estilo.EsquemaDetalle oEsquemaDetalleDefault = new();

        oEsquemaDetalleDefault.Where.Add(Depositary.Business.Tables.Estilo.EsquemaDetalle.ColumnEnum.EsquemaId, Depositary.sqlEnum.OperandEnum.Equal, esquemaDefault.Id);

        oEsquemaDetalleDefault.Items();

        if (oEsquemaDetalleDefault.Result.Count > 0)
        {
            foreach (var esquemaDetalle in oEsquemaDetalleDefault.Result)
            {
                Depositary.Entities.Tables.Estilo.EsquemaDetalle eEsquemaDetalleNuevo = new();

                eEsquemaDetalleNuevo.Descripcion = esquemaDetalle.Descripcion;
                eEsquemaDetalleNuevo.EsquemaId = Esquema_entity.Id;
                eEsquemaDetalleNuevo.FechaCreacion = DateTime.Now;
                eEsquemaDetalleNuevo.Habilitado = esquemaDetalle.Habilitado;
                eEsquemaDetalleNuevo.Imagen = esquemaDetalle.Imagen;
                eEsquemaDetalleNuevo.Nombre = esquemaDetalle.Nombre;
                eEsquemaDetalleNuevo.TipoEsquemaDetalleId = esquemaDetalle.TipoEsquemaDetalleId;
                eEsquemaDetalleNuevo.UsuarioCreacion = dataUsuario.Id;
                eEsquemaDetalleNuevo.Valor = esquemaDetalle.Valor;
                eEsquemaDetalleNuevo.AplicacionId = esquemaDetalle.AplicacionId;

                try
                {
                    oEsquemaDetalleNuevo.Add(eEsquemaDetalleNuevo);
                }
                catch (Exception ex)
                {
                    return false;
                }
            }

        }

        return true;
    }

    #endregion

    /// <summary>
    /// Initializations for adding a new entity
    /// </summary>
    private void Add()
    {
        //Main entity initialization
        Esquema_entity = new();
        //Relations entities initialization
        crudMode = CrudMode.Add;
    }
    /// <summary>
    /// <summary>
    /// Initializations for editing an entity
    /// </summary>
    private void Edit(Depositary.Entities.Tables.Estilo.Esquema item, bool delete)
    {
        Esquema_entity = item;
        if (delete)
            crudMode = CrudMode.Delete;
        else
            crudMode = CrudMode.Edit;
    }
    /// <summary>
    /// Operation depending on Crud mode
    /// </summary>
    private async Task Save()
    {
        string actionInformation = string.Empty;
        NotificationSeverity severityType = NotificationSeverity.Error;
        string summary = string.Empty;
        Depositary.Business.Tables.Estilo.Esquema crud = new();
        foreach (var property in Esquema_entity.GetType().GetProperties())
        {
            switch (property.Name)
            {
                case "FechaModificacion":
                    if (crudMode == CrudMode.Add)
                    {
                        Esquema_entity.FechaModificacion = null;
                    }
                    else
                    {
                        Esquema_entity.FechaModificacion = DateTime.Now;
                    }
                    break;
                case "FechaCreacion":
                    if (crudMode == CrudMode.Add)
                    {
                        Esquema_entity.FechaCreacion = DateTime.Now;
                    }
                    break;
                case "UsuarioCreacion":
                    if (crudMode == CrudMode.Add)
                    {
                        Esquema_entity.UsuarioCreacion = dataUsuario.Id;
                    }
                    break;
                case "UsuarioModificacion":
                    if (crudMode == CrudMode.Add)
                    {
                        Esquema_entity.UsuarioModificacion = null;
                    }
                    else
                    {
                        Esquema_entity.UsuarioModificacion = dataUsuario.Id;
                    }
                    break;
            }
        }
        if (crudMode == CrudMode.Add || crudMode == CrudMode.Edit)
        {
            esquemaDefault = ObtenerEsquemaDefault();

            if (Esquema_entity.EsDefault && esquemaDefault != null)
            {
                summary = "Error al procesar.";
                actionInformation = "No se puede guardar/editar este esquema como default debido a que ya existe uno.";
                severityType = NotificationSeverity.Error;
            }
            else
            {
                switch (crudMode)
                {
                    case CrudMode.Add:
                        try
                        {
                            crud.Add(Esquema_entity);

                            //Si se agrego un esquema no default y ademas existia un esquema default entonces le cargamos los items del esquema default
                            if (!Esquema_entity.EsDefault && esquemaDefault != null)
                            {
                                if (!InsertarDetallesEsquemaDefault())
                                {
                                    summary = "Error al procesar.";
                                    actionInformation = "Se pudo generar el esquema pero no se pudieron insertar los detalles del esquema default";
                                    severityType = NotificationSeverity.Warning;
                                }
                                else
                                {
                                    summary = "Exito.";
                                    actionInformation = "Se genero el esquema y se cargaron los detalles usando la plantilla default.";
                                    severityType = NotificationSeverity.Success;
                                }
                            }
                            else
                            {
                                summary = "El registro se ha ";
                                actionInformation = "agregado.";
                                severityType = NotificationSeverity.Success;
                            }

                        }
                        catch (Exception ex)
                        {
                            summary = "Error al procesar.";
                            actionInformation = ex.Message;
                            severityType = NotificationSeverity.Error;
                        }
                        break;
                    case CrudMode.Edit:
                        try
                        {
                            crud.Update(Esquema_entity);
                            summary = "El registro se ha ";
                            actionInformation = "modificado.";
                            severityType = NotificationSeverity.Success;
                        }
                        catch (Exception ex)
                        {
                            summary = "Error al procesar.";
                            actionInformation = ex.Message;
                            severityType = NotificationSeverity.Error;
                        }
                        break;
                }
            }
        }
        else
        {
            try
            {
                Esquema_entity.Habilitado = false;
                crud.Update(Esquema_entity);
                summary = "El registro se ha ";
                actionInformation = "eliminado.";
                severityType = NotificationSeverity.Success;
            }
            catch (Exception ex)
            {
                summary = "Error al procesar.";
                actionInformation = ex.Message;
                severityType = NotificationSeverity.Error;
            }
        }

        // Sets Crud mode to List
        crudMode = CrudMode.List;

        ShowNotification(new NotificationMessage
            {
                Severity = severityType,
                Summary = summary,
                Detail = actionInformation,
                Duration = 4000
            });

        await Task.Run(LoadMainEntityData);
    }

