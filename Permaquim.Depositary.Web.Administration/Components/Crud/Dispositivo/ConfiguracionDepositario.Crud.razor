                                    Change=@(args => SelectTipoConfiguracionDepositarioValueChanged(args))
                                    Disabled="@(crudMode==CrudMode.Delete)" />
                  }
                  else
                  {
                       <RadzenDropDown AllowClear="true" TValue="Int64" Class="w-100" 
                                    Data=@TipoConfiguracionDepositario_entities TextProperty = "Nombre" ValueProperty = "Id"
                                    Change=@(args => SelectTipoConfiguracionDepositarioValueChanged(args))
                                    Disabled="@(crudMode==CrudMode.Delete)" />
                  }
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="DepositarioId" Component="DepositarioId" style="width: 100%">
