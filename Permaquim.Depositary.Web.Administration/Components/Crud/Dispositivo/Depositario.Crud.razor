    </RadzenDataGridColumn>
        </Columns>
        </RadzenDataGrid>
 <hr>
    }
 
    if (crudMode == CrudMode.Add || crudMode == CrudMode.Edit || crudMode == CrudMode.Delete)
    {
         <RadzenTemplateForm TItem="DepositarioAdminWeb.Entities.Tables.Dispositivo.Depositario" Data="@Depositario_entity"  @bind-Value="Depositario_entity" Submit ="Save" Visible ="@(Depositario_entity != null)">
