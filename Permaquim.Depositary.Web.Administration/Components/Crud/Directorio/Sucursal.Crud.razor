    /// Entity is binded, however it sets anyway.
    /// </summary>
    /// <returns></returns>
    void HabilitadoChange(bool? value,DepositarioAdminWeb.Entities.Tables.Directorio.Sucursal item)
    {
         Sucursal_entity = item;
    }
    #endregion
 
