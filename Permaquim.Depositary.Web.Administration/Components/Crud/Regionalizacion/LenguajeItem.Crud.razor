                </RadzenNumeric>
             </div>
         </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="LenguajeId" Component="LenguajeId" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                  @if(@Lenguaje_entities.Count > 0 && @Lenguaje_entities.FirstOrDefault( c => c.Id == @LenguajeItem_entity.LenguajeId) != null)
                  {
                        <RadzenDropDown AllowClear="true" TValue="Int64" Class="w-100" @bind-Value="@LenguajeItem_entity.LenguajeId"
                                    Data=@Lenguaje_entities TextProperty = "Nombre" ValueProperty = "Id"
                                    Change=@(args => SelectLenguajeValueChanged(args))
                                    Disabled="@(crudMode==CrudMode.Delete)" />
                  }
                  else
                  {
                       <RadzenDropDown AllowClear="true" TValue="Int64" Class="w-100" 
                                    Data=@Lenguaje_entities TextProperty = "Nombre" ValueProperty = "Id"
                                    Change=@(args => SelectLenguajeValueChanged(args))
                                    Disabled="@(crudMode==CrudMode.Delete)" />
                  }
              </div>
            </div>
              <div style="margin-bottom: 1rem" class="row">
                 <div class="col-md-3">
                     <RadzenLabel Text="Clave" Component="Clave" style="width: 100%">
                     </RadzenLabel>
                 </div>
                 <div class="col-md-9">
                     <RadzenTextBox  style="display: block" @bind-Value="@(LenguajeItem_entity.Clave)" Name="Clave" Disabled="@(crudMode==CrudMode.Delete)">
                     </RadzenTextBox>
