            <RadzenDataGridColumn TItem="DepositarioAdminWeb.Entities.Tables.Regionalizacion.LenguajeItem" Property="Clave" Filterable="false" Title="Clave" Frozen="false" Width="50px" TextAlign="TextAlign.Center" >
    </RadzenDataGridColumn>
